{
    "manifest_version": 3,
    "name": "LinkedIn Auto Connect - Professional",
    "version": "2.0.0",
    "description": "Advanced LinkedIn Auto-Connect Extension with Smart Queue Management, Human Behavior Simulation, and Anti-Detection Mechanisms",
    "author": "Manyungan",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "LinkedIn Auto Connect"
    },
    "permissions": [
        "tabs",
        "storage",
        "scripting",
        "alarms"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*",
        "https://linkedin.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/in/*",
                "https://linkedin.com/in/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*"
            ],
            "matches": [
                "https://www.linkedin.com/*"
            ]
        }
    ]
}